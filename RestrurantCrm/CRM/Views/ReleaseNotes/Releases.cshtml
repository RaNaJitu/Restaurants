@model IEnumerable<Repo.Models.ReleaseNotesModel>
@{
    ViewBag.Title = "Releases";
}
<div class="content-page">
    <div class="container-fluid  timeline-page">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-block card-stretch card-height">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Bug Fixes and Release Notes</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="iq-timeline2 m-0 d-flex align-items-center justify-content-between position-relative">
                            <ul class="list-inline p-0 m-0">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <div class="content-date bg-primary">
                                            <span class="date">@item.created_on.Date.Day</span>
                                            <span class="month">@item.created_on.ToString("MMM")</span>
                                        </div>
                                        <div class="content ml-3">
                                            <h6 class="d-inline-block mb-2">@item.Title</h6>
                                            <small class="float-right mt-1 text-primary">@HelpersMethods.TimeAgo(item.created_on)</small>
                                            <div class="d-inline-block w-100">
                                                @Html.Raw(item.Notes)
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


